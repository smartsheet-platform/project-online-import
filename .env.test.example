# Integration Test Configuration
# Copy this file to .env.test and fill in your values

# Required: Smartsheet API Token
# Get yours from: https://app.smartsheet.com/apps/apps-directory
SMARTSHEET_API_TOKEN=your_smartsheet_api_token_here

# Optional: Test Workspace Configuration
# Prefix for test workspaces (helps identify and cleanup)
TEST_WORKSPACE_PREFIX="ETL Test -"

# Cleanup test workspaces after successful tests (default: true)
CLEANUP_TEST_WORKSPACES=true

# Cleanup test workspaces even after failed tests (default: false)
# Set to false to preserve workspaces for debugging failed tests
CLEANUP_TEST_WORKSPACES_ON_FAILURE=false

# PMO Standards Workspace
# If you have a pre-existing PMO Standards workspace, specify its ID here
# Otherwise, tests will create a temporary one
PMO_STANDARDS_WORKSPACE_ID=

# Template Workspace ID (optional)
# Workspace ID used as template for creating new project workspaces
# If not specified, blank workspaces will be created from scratch
# Example: TEMPLATE_WORKSPACE_ID=9002412817049476
TEMPLATE_WORKSPACE_ID=

# Test Execution Configuration
# Maximum time for large performance tests (milliseconds)
LARGE_TEST_TIMEOUT=300000

# Enable verbose test output
VERBOSE_TESTS=false